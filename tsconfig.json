{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [
      "src",
      "tests"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/tests/*": [
        "../tests/*"
      ]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "types": [
      "cypress",
      "node"
    ]
  },
  "include": [
    "src",
    "tests",
    "cypress.config.ts"
  ],
  "exclude": [
    "tests/e2e/cypress",
    "eslint.config.mjs",
    "vite.config.mjs",
  ]
}
